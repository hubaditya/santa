<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cartCard"
    android:weightSum="1"
    android:paddingBottom="2dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="NAME"
        android:textSize="15dp"
        android:textColor="@color/bright_foreground_material_light"
        android:gravity="left"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/removeItem"
        android:layout_toLeftOf="@+id/removeItem" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="PRICE"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/bright_foreground_material_light"
        android:id="@+id/textView11"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="AMOUNT"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/bright_foreground_material_light"
        android:id="@+id/textView12"
        android:layout_below="@+id/textView4"
        android:gravity="center"
        android:layout_toRightOf="@+id/add1"
        android:layout_toEndOf="@+id/add1" />

    <TextView
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:text="-"
        android:textSize="15dp"
        android:clickable="true"
        android:textColor="@color/bright_foreground_material_light"
        android:gravity="center"
        android:id="@+id/remove1"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/quantity1"
        android:layout_toRightOf="@+id/textView11"
        android:layout_toEndOf="@+id/textView11"
        android:layout_below="@+id/textView4" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Q"
        android:background="@drawable/circle"
        android:textSize="15dp"
        android:textColor="@color/bright_foreground_material_light"
        android:id="@+id/quantity1"
        android:gravity="center"
        android:layout_below="@+id/textView4"
        android:layout_toRightOf="@+id/remove1"
        android:layout_toEndOf="@+id/remove1" />

    <TextView
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:text="+"
        android:textSize="15dp"
        android:textStyle="bold"
        android:clickable="true"
        android:textColor="@color/bright_foreground_material_light"
        android:gravity="center"
        android:id="@+id/add1"
        android:layout_alignTop="@+id/remove1"
        android:layout_toRightOf="@+id/quantity1"
        android:layout_toEndOf="@+id/quantity1"
        android:layout_alignBottom="@+id/quantity1" />

    <TextView
        android:layout_width="50px"
        android:layout_height="50px"
        android:id="@+id/removeItem"
        android:textColor="@color/red"
        android:text="x"
        android:textSize="40px"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>