<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.delivery.santa.deliver" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE"/>

    <application
        android:name="com.delivery.santa.deliver.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:screenOrientation="portrait">
        <activity
            android:name="com.delivery.santa.deliver.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.delivery.santa.deliver.VendorActivity"
            android:label="Delivery Santa"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.delivery.santa.deliver.Main2Activity"
            android:label="Delivery Santa"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.delivery.santa.deliver.CollegeActivity"
            android:label="@string/title_activity_college"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
